{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@milescreative/mc-auth": ["../../packages/mc-auth/src/index.ts"],
      "@milescreative/mc-auth/*": ["../../packages/mc-auth/src/*"],
      "@milescreative/mc-rate-limiter": ["../../packages/mc-rate-limiter/src/index.ts"],
      "@milescreative/mc-rate-limiter/*": ["../../packages/mc-rate-limiter/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
