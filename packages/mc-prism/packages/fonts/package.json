{
  "name": "@mc-prism/fonts",
  "version": "0.0.1",
  "description": "Font management and optimization wrapper around Fontsource",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@fontsource-variable/grandstander": "^5.1.2",
    "axios": "^1.6.5",
    "commander": "^11.1.0",
    "google-font-metadata": "^6.0.3",
    "inquirer": "^9.2.12",
    "puppeteer": "^24.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/inquirer": "^9.0.7",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "development": {
        "types": "./src/index.ts",
        "import": "./src/index.ts"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    }
  }
}
